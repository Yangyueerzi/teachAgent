  padding: 32rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  animation: tipsSlideIn 0.8s ease-out 1s both;
}

@keyframes tipsSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tips-title {
  font-weight: 700;
  color: #1d4ed8;
  margin-bottom: 16rpx;
  font-size: 32rpx;
}

.tips-content {
  color: #1d4ed8;
  font-size: 28rpx;
