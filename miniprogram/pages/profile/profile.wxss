.profile-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  margin-bottom: 40rpx;
}

.user-card {
  background: linear-gradient(135deg, #0052d9, #0085ff);
  border-radius: 32rpx;
  padding: 48rpx;
  color: white;
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  pointer-events: none;
}

.user-avatar {
  margin-bottom: 24rpx;
}

.user-info {
  margin-bottom: 40rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 28rpx;
  opacity: 0.8;
}

.user-stats {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 32rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 未登录状态 */
.login-section {
  margin-bottom: 40rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 80rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.login-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
}

.login-btn {
  margin-top: 16rpx;
}

/* 学习记录区域 */
.records-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.record-score {
  text-align: center;
}

.score-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #0052d9;
}

.score-label {
  font-size: 20rpx;
  color: #666666;
}

/* 错误单词本区域 */
.wrong-words-section {
  margin-bottom: 32rpx;
}

/* 功能菜单区域 */
.menu-section {
  margin-bottom: 32rpx;
} 