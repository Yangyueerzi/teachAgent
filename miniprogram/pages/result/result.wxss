.result-container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 50%, #bbf7d0 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* ËÉåÊôØË£ÖÈ•∞ - Â∫ÜÁ•ùÂΩ©Â∏¶ÊïàÊûú */
.result-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 20% 30%, rgba(34, 197, 94, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(16, 185, 129, 0.08) 0%, transparent 50%);
  animation: celebrationBg 12s ease-in-out infinite;
  z-index: 0;
}

@keyframes celebrationBg {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.1) rotate(5deg); }
}

/* ÊàêÁª©Âå∫Âüü */
.score-section {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
  animation: scoreSlideIn 1s ease-out;
}

@keyframes scoreSlideIn {
  from {
    opacity: 0;
    transform: translateY(-50rpx) scale(0.9);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.score-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 16rpx 64rpx rgba(34, 197, 94, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
  transition: all 0.4s ease;
}

.score-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(34, 197, 94, 0.1), transparent);
  animation: scoreShine 3s ease-in-out infinite;
}

@keyframes scoreShine {
  0% { left: -100%; }
  100% { left: 100%; }
}

.score-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 24rpx 80rpx rgba(34, 197, 94, 0.2);
}

.score-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx;
  position: relative;
  background: conic-gradient(#10b981 0deg var(--progress-deg, 216deg), #e5e7eb var(--progress-deg, 216deg) 360deg);
  animation: circleGlow 2s ease-in-out infinite;
}

@keyframes circleGlow {
  0%, 100% { 
    box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
  }
  50% { 
    box-shadow: 0 0 0 20rpx rgba(16, 185, 129, 0);
  }
}

.score-inner {
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  animation: numberPulse 1.5s ease-in-out 0.5s both;
}

@keyframes numberPulse {
  0% { transform: scale(0.8); opacity: 0; }
  50% { transform: scale(1.1); opacity: 1; }
  100% { transform: scale(1); opacity: 1; }
}

.score-text {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #10b981, #22c55e);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: numberCount 2s ease-out 0.5s both;
}

@keyframes numberCount {
  from { opacity: 0; transform: scale(0.5); }
  to { opacity: 1; transform: scale(1); }
}

.score-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.score-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
  animation: titleFadeIn 0.8s ease-out 0.8s both;
}

@keyframes titleFadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.score-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
  animation: descFadeIn 0.8s ease-out 1s both;
}

@keyframes descFadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* ÁªüËÆ°Âå∫Âüü */
.stats-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
  animation: statsSlideIn 0.8s ease-out 0.6s both;
}

@keyframes statsSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.stat-item {
  text-align: center;
  padding: 32rpx 16rpx;
  transition: all 0.3s ease;
  animation: statPop 0.6s ease-out both;
}

.stat-item:nth-child(1) { animation-delay: 1.2s; }
.stat-item:nth-child(2) { animation-delay: 1.4s; }
.stat-item:nth-child(3) { animation-delay: 1.6s; }

@keyframes statPop {
  from {
    opacity: 0;
    transform: scale(0.8) translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.stat-item:active {
  transform: scale(1.05);
  background: rgba(16, 185, 129, 0.05);
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #10b981;
  margin-bottom: 8rpx;
  animation: statNumberRoll 1s ease-out 1.5s both;
}

@keyframes statNumberRoll {
  from { opacity: 0; transform: rotateY(-90deg); }
  to { opacity: 1; transform: rotateY(0deg); }
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

/* ÈîôËØØÂçïËØçÂå∫Âüü */
.wrong-section {
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
  animation: wrongSectionSlideIn 0.8s ease-out 0.8s both;
}

@keyframes wrongSectionSlideIn {
  from {
    opacity: 0;
    transform: translateX(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
  position: relative;
  padding-left: 16rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #10b981, #22c55e);
  border-radius: 2rpx;
}

.word-actions {
  display: flex;
  gap: 16rpx;
}

/* Â≠¶‰π†Âª∫ËÆÆ */
.tips-section {
