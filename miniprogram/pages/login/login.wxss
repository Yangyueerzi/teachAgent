.login-container {
  padding: 80rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #f8faff 0%, #e5f3ff 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.logo-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
}

.logo-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 登录方式 */
.login-methods {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.login-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.method-icon {
  width: 96rpx;
  height: 96rpx;
  background: #f8faff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.method-content {
  margin-bottom: 32rpx;
}

.method-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.method-desc {
  font-size: 28rpx;
  color: #666666;
}

.method-btn {
  margin-top: 16rpx;
}

/* 手机号输入区域 */
.phone-input-section {
  margin-top: 32rpx;
}

.phone-input {
  margin-bottom: 24rpx;
}

.code-input-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  flex-shrink: 0;
  width: 200rpx;
}

.login-btn {
  margin-top: 16rpx;
}

/* 用户协议 */
.agreement-section {
  margin-top: 60rpx;
  text-align: center;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

.agreement-link {
  color: #0052d9;
  text-decoration: underline;
} 