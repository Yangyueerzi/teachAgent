.upload-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 提示区域 */
.tips-section {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.tips-title {
  font-weight: 600;
  color: #856404;
  margin-bottom: 16rpx;
  font-size: 32rpx;
}

.tips-content {
  color: #856404;
  font-size: 28rpx;
  line-height: 1.5;
}

.tip-item {
  margin-bottom: 8rpx;
}

/* 上传区域 */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.upload-area {
  background: #ffffff;
  border: 4rpx dashed #d1d5db;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #0052d9;
  background: #f8faff;
}

.upload-icon {
  width: 128rpx;
  height: 128rpx;
  background: #e5e7eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
}

.upload-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.upload-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

.upload-buttons {
  display: flex;
  gap: 24rpx;
}

.upload-btn {
  flex: 1;
}

/* 预览区域 */
.preview-section {
  display: flex;
  flex-direction: column;
}

.preview-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.preview-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333333;
}

.preview-image {
  width: 100%;
  max-height: 600rpx;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.preview-buttons {
  display: flex;
  gap: 24rpx;
}

.preview-btn {
  flex: 1;
}

/* 处理中状态 */
.processing-section {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
}

.processing-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  width: 100%;
  max-width: 600rpx;
}

.processing-icon {
  margin-bottom: 32rpx;
}

.processing-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin: 32rpx 0 16rpx;
}

.processing-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

.processing-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 24rpx;
}

/* 进度条容器 */
.progress-container {
  margin: 32rpx 0;
  padding: 0 16rpx;
}

/* 处理步骤 */
.steps-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0 24rpx;
  padding: 0 16rpx;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
}

.step-item:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 20rpx;
  left: 60%;
  right: -40%;
  height: 2rpx;
  background: #e5e7eb;
  z-index: 1;
}

.step-item.active:not(:last-child)::after,
.step-item.completed:not(:last-child)::after {
  background: #0052d9;
}

.step-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.step-item.active .step-icon {
  background: #0052d9;
  color: #ffffff;
}

.step-item.completed .step-icon {
  background: #52c41a;
  color: #ffffff;
}

.step-text {
  font-size: 20rpx;
  color: #999999;
  text-align: center;
  line-height: 1.2;
}

.step-item.active .step-text {
  color: #0052d9;
  font-weight: 500;
}

.step-item.completed .step-text {
  color: #52c41a;
  font-weight: 500;
}

/* 识别结果 */
.result-section {
  display: flex;
  flex-direction: column;
}

.result-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333333;
}

.words-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.word-item {
  background: #e5f3ff;
  color: #0052d9;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
}

.result-count {
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

.start-btn {
  margin-top: 16rpx;
} 