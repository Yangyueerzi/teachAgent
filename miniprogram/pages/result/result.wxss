.result-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 成绩区域 */
.score-section {
  margin-bottom: 40rpx;
}

.score-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.score-circle {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx;
  position: relative;
  background: conic-gradient(#0052d9 0deg var(--progress-deg, 216deg), #e5e7eb var(--progress-deg, 216deg) 360deg);
}

.score-inner {
  width: 180rpx;
  height: 180rpx;
  background: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.score-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #0052d9;
}

.score-label {
  font-size: 24rpx;
  color: #666666;
}

.score-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.score-desc {
  font-size: 28rpx;
  color: #666666;
}

/* 统计区域 */
.stats-section {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.stat-item {
  text-align: center;
  padding: 32rpx 16rpx;
}

.stat-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #0052d9;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 错误单词区域 */
.wrong-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}

.word-actions {
  display: flex;
  gap: 16rpx;
}

/* 学习建议 */
.tips-section {
  background: #e5f3ff;
  border: 2rpx solid #b3d9ff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
}

.tips-title {
  font-weight: 600;
  color: #0052d9;
  margin-bottom: 16rpx;
  font-size: 32rpx;
}

.tips-content {
  color: #0052d9;
  font-size: 28rpx;
  line-height: 1.5;
}

.tip-item {
  margin-bottom: 8rpx;
}

/* 操作按钮 */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
}

/* 庆祝动画 */
.celebration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.celebration.show {
  opacity: 1;
}

.celebration-content {
  background: #ffffff;
  border-radius: 40rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  max-width: 600rpx;
}

.celebration-emoji {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.celebration-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
}

.celebration-desc {
  font-size: 32rpx;
  color: #666666;
}