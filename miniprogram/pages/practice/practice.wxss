.practice-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 进度区域 */
.progress-section {
  margin-bottom: 40rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 单词播放区域 */
.word-section {
  flex: 1;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.word-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.play-button {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #0052d9, #0085ff);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 48rpx;
  transition: all 0.3s ease;
}

.play-button:active {
  transform: scale(1.05);
  box-shadow: 0 16rpx 40rpx rgba(0, 82, 217, 0.3);
}

.play-button.playing {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.word-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.word-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.word-tip {
  font-size: 24rpx;
  color: #999999;
}

/* 输入区域 */
.input-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx;
}

.input-display {
  background: #f8faff;
  border: 4rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 48rpx;
  font-weight: 600;
  text-align: center;
  letter-spacing: 4rpx;
  margin-bottom: 32rpx;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
}

.placeholder {
  color: #cccccc;
}

/* 键盘 */
.keyboard {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.key {
  background: #f3f4f6;
  border: 2rpx solid #d1d5db;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  user-select: none;
  color: #333333;
}

.key:active,
.key.pressed {
  background: #0052d9;
  color: white;
  transform: scale(0.95);
  border-color: #0052d9;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 24rpx;
}

.control-btn {
  flex: 1;
}

/* 反馈弹窗 */
.feedback-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.feedback-overlay.show {
  opacity: 1;
}

.feedback-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 80rpx;
  text-align: center;
  max-width: 500rpx;
}

.feedback-content.correct {
  background: rgba(34, 197, 94, 0.9);
  color: white;
}

.feedback-content.incorrect {
  background: rgba(239, 68, 68, 0.9);
  color: white;
}

.feedback-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.feedback-text {
  font-size: 36rpx;
  font-weight: 600;
} 