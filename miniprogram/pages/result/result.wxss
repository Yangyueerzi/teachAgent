}

.tip-item {
  margin-bottom: 8rpx;
  animation: tipItemFadeIn 0.6s ease-out both;
}

.tip-item:nth-child(1) { animation-delay: 1.2s; }
.tip-item:nth-child(2) { animation-delay: 1.4s; }
.tip-item:nth-child(3) { animation-delay: 1.6s; }

@keyframes tipItemFadeIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-section {
  display: flex;
  gap: 24rpx;
  margin-top: 40rpx;
  position: relative;
  z-index: 1;
  animation: actionSlideIn 0.8s ease-out 1.2s both;
}

@keyframes actionSlideIn {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.action-btn {
  flex: 1;
  border-radius: 24rpx !important;
  font-weight: 600 !important;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.6s ease;
}

.action-btn:active::before {
  width: 600rpx;
  height: 600rpx;
}

/* Â∫ÜÁ•ùÂä®Áîª */
.celebration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.celebration.show {
  opacity: 1;
}

.celebration-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 40rpx;
  padding: 80rpx 60rpx;
  text-align: center;
  max-width: 600rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.2);
  animation: celebrationPop 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

@keyframes celebrationPop {
  0% {
    opacity: 0;
    transform: scale(0.5) rotate(-10deg);
  }
  100% {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
}

.celebration-content::before {
  content: 'üéâ';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  font-size: 60rpx;
  animation: confettiFloat 3s ease-in-out infinite;
}

.celebration-content::after {
  content: 'üéä';
  position: absolute;
  bottom: -20rpx;
  right: -20rpx;
  font-size: 60rpx;
  animation: confettiFloat 3s ease-in-out infinite 1.5s;
}

@keyframes confettiFloat {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.celebration-emoji {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: emojiSpin 2s ease-in-out infinite;
}

@keyframes emojiSpin {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.2) rotate(10deg); }
}

.celebration-title {
  font-size: 48rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #10b981, #22c55e);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 16rpx;
  animation: titleBounce 1s ease-out 0.5s both;
}

@keyframes titleBounce {
  0% { opacity: 0; transform: translateY(-30rpx); }
  60% { opacity: 1; transform: translateY(10rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

.celebration-desc {
  font-size: 32rpx;
  color: #666666;
  line-height: 1.5;
  animation: descFadeIn 0.8s ease-out 1s both;
}