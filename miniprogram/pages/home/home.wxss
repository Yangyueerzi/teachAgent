.home-container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.welcome-section {
  margin-bottom: 60rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.feature-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.feature-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.feature-card.disabled {
  opacity: 0.6;
}

.feature-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #0052d9, #0085ff);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.feature-icon.disabled {
  background: #cccccc;
}

.feature-content {
  margin-bottom: 32rpx;
}

.feature-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.feature-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.feature-tags {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.feature-btn {
  margin-top: 32rpx;
} 